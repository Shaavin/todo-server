generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Color {
  RED
  ORANGE
  YELLOW
  GREEN
  BLUE
  INDIGO
  PURPLE
  PINK
  BROWN
}

model Task {
  id        String    @id @default(uuid())
  title     String
  color     Color?
  completed DateTime? // DateTime for possible future enhancements
  created   DateTime  @default(now())
  updated   DateTime? @updatedAt
  deleted   DateTime? // Support for soft deletion
}